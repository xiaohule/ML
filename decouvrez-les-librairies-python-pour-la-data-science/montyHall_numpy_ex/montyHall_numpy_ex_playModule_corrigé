
from enum import Enum
import numpy as np

class Strategie(Enum):
    CHANGER = 1
    GARDER  = 2
    

def play(strategie, ntour):
    # liste des valeurs de bonne porte
    bonne_porte   = np.random.randint(0, 3, ntour)
   
    # liste des premier choix
    premier_choix = np.random.randint(0, 3, ntour)
    
    if strategie == Strategie.GARDER:
        gain = (premier_choix == bonne_porte)
    else:
        # Le joueur gagne systematiquement si le premier choix est une 
        # mauvaise porte
        gain = (premier_choix  != bonne_porte) \

    return gain


